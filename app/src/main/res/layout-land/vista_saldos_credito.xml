            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:text="Monto:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textStyle="normal|bold"
