<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_kitkat_height"
            android:background="?colorPrimary"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_lollipop_height"
            android:background="?colorPrimaryDark"/>

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Cuenta Retiro:"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:layout_marginTop="55dp"
                android:layout_marginStart="15dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inversion"
                android:textSize="16sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="55dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:text="Plazo:"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:layout_marginStart="15dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="Seleccione Plazo"
                android:layout_weight="0.00"
                android:id="@+id/plazo"
                android:textSize="16sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginEnd="60dp"/>
        </TableRow>


        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:text="Cantidad:"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView36"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:layout_weight="0.00"
                android:layout_marginStart="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|number"
                android:ems="10"
                android:id="@+id/cantidad"
                android:hint="Solo cantidad mayor a $1000"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginEnd="60dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:text="Clave OperaciÃ³n:"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_marginStart="15dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/cvoperacion"
                android:hint="Ingrese su clave"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginEnd="60dp"/>
        </TableRow>

        <Button
            android:text="Enviar"
            android:id="@+id/fin_inversion"
            android:layout_marginStart="220dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_width="150dp"
            android:backgroundTint="@color/md_blue"
            android:textColor="@color/md_amber_50"
            android:background="@drawable/shape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultado"
            android:visibility="invisible"/>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/status_bar_margin_top">

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />


    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />


</android.support.v4.widget.DrawerLayout>