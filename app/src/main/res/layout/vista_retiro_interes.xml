<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inversion"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="normal|bold"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowu8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Inversión:"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView34"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fecha"
                    android:textSize="16sp"
                    android:textColor="@color/md_black_1000"
                    android:textAlignment="textEnd"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Vencimiento:"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textVi9"
                    android:textStyle="normal|bold"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vencimiento"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Depósito:"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt"
                    android:textStyle="normal|bold"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:text="$"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/deposito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:text="TextView"
                    android:textAlignment="textEnd"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Interés:"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView35"
                    android:textStyle="normal|bold"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="16sp"
                    android:text="$"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/interes"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"/>

            </TableRow>

                <TextView
                    android:id="@+id/dias"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/inversionid"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/tasa"
                    android:visibility="invisible"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>