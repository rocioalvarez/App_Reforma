<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_lollipop_height"
        android:background="?colorPrimaryDark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/md_white_1000">

        <TableRow
            android:id="@+id/tableRow3N"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="70dp">

            <TextView
                android:text="Seleccione el servicio a realizar:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textv1"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cataservicios"
                android:spinnerMode="dialog"
                android:focusable="true"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:background="@drawable/spinner_border"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowTQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Referencia del Servicio:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textv2"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp">

            <EditText
                android:layout_width="290dp"
                android:layout_height="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/referencia"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:hint="Ingrese referencia"
                android:background="@drawable/spinner_selector"
                android:textAlignment="center"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btn_info"
                android:drawableBottom="@drawable/ic_action_action_help" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp">

            <TextView
                android:text="ComisiÃ³n:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textv3"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowAX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:id="@+id/comision"
                android:enabled="false"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:background="@drawable/spinner_selector"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Cuenta de retiro:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textv4"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cuenta"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:background="@drawable/spinner_border" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <TextView
                android:text="Nombre: "
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textv5"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:id="@+id/nombre"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:enabled="false"
                android:visibility="invisible"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <TextView
                android:text="RFC/CURP: "
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textv6"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/rfc"
                android:visibility="invisible"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:text="Monto a transferir:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textv7"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="numberDecimal"
                android:id="@+id/pmonto"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:hint="Ingrese cantidad"
                android:background="@drawable/spinner_selector"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:text="Confirmar monto:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textv8"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowEW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="numberDecimal"
                android:id="@+id/cmonto"
                android:textColor="@android:color/background_dark"
                android:maxLength="18"
                android:textSize="16sp"
                android:hint="Ingrese cantidad"
                android:background="@drawable/spinner_selector"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Clave de operaciÃ³n:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textv9"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:id="@+id/cvoperacion"
                android:hint="Ingrese contraseÃ±a"
                android:textSize="16sp"
                android:maxLines="1"
                android:imeOptions="actionUnspecified"
                android:background="@drawable/spinner_selector"
                android:textAlignment="center"/>
        </TableRow>

        <Button
            android:text="Finalizar"
            android:id="@+id/finalizar"
            android:textColor="@color/md_amber_50"
            android:background="@drawable/shape"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/md_blue"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/result"
            android:visibility="invisible"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/idcliente"
            android:textColor="@android:color/background_dark"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/deposito"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/retiro"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/notelefono"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/codigo"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/usuario"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/folio"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/resultado"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/autorizacion"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fecha"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/serviciop"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/codigorespuesta"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/respuesta"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ncajero"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/referencia2"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/cliente"
            android:visibility="invisible"/>

    </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />


</android.support.v4.widget.DrawerLayout>