<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_lollipop_height"
        android:background="?colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/md_white_1000">

        <Button
            android:text="Nuevo SPEI"
            android:id="@+id/btn_nuevo"
            android:textColor="@color/md_amber_50"
            android:textSize="20sp"
            android:background="@drawable/shape"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:backgroundTint="@color/md_blue"
            android:layout_marginTop="150dp"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>

        <Button
            android:text="GestiÃ³n SPEI"
            android:id="@+id/btn_gestion"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_height="55dp"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/md_blue"
            android:background="@drawable/shape"
            android:textColor="@color/md_amber_50"
            android:textAllCaps="false"/>

        <Button
            android:text="Enviar SPEI"
            android:id="@+id/btn_enviar"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_height="55dp"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/md_blue"
            android:background="@drawable/shape"
            android:textColor="@color/md_amber_50"
            android:textAllCaps="false"/>

        <Button
            android:text="Comprobante SPEI"
            android:id="@+id/btn_comprobant"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_height="55dp"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/md_blue"
            android:background="@drawable/shape"
            android:textColor="@color/md_amber_50"
            android:textAllCaps="false"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />

</android.support.v4.widget.DrawerLayout>

