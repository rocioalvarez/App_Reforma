<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_lollipop_height"
        android:background="?colorPrimaryDark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/md_white_1000">

            <TableRow
                android:id="@+id/tableRo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:text="Seleccione cuenta de retiro:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView1"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/cuenta"
                    android:hint="cuenta"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:spinnerMode="dialog"
                    android:background="@drawable/spinner_border"
                    android:textAlignment="center"/>
            </TableRow>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/idcliente"
                android:visibility="invisible"/>

            <TableRow
                android:id="@+id/tableRo2"
                android:layout_width="0dp"
                android:layout_height="0dp">

                <TextView
                    android:text="Nombre:"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/txtView2"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:visibility="invisible"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/nombre"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:layout_marginEnd="10dp"
                    android:enabled="false"
                    android:visibility="invisible"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableRo3"
                android:layout_width="0dp"
                android:layout_height="0dp">

                <TextView
                    android:text="RFC:"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/txtView3"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginStart="10dp"
                    android:visibility="invisible"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/rfc"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginEnd="10dp"
                    android:enabled="false"
                    android:visibility="invisible"/>
            </TableRow>


            <TableRow
                android:id="@+id/tableRo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:text="Beneficiario:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView4"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowKJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/beneficiario"
                    android:hint="Ingrese cuenta"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>


            <Button
                android:text="BUSCAR"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/btn_datos"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/md_amber_50"
                android:background="@drawable/shape"
                android:backgroundTint="@color/md_blue"
                android:textSize="16dp" />

            <TableRow
                android:id="@+id/tableRo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:text="Nombre: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView5"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@color/md_blue"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/nombrebe"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textAlignment="textStart"/>
            </TableRow>


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:inputType="textPersonName"
                    android:id="@+id/rfcbene"
                    android:textColor="@android:color/background_dark"
                    android:enabled="false"
                    android:textAlignment="center">
                </EditText>


            <TableRow
                android:id="@+id/tableRo7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" >

                <TextView
                    android:text="Seleccione cuenta depÃ³sito:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView7"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/table7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/cbeneficiario"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:spinnerMode="dialog"
                    android:background="@drawable/spinner_border"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRo8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:text="Concepto:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView8"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/background_dark"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowOP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="text"
                    android:id="@+id/concepto"
                    android:hint="Ingrese descripciÃ³n"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRo9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Cantidad:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView9"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/background_dark"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowJH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="text|number"
                    android:ems="10"
                    android:id="@+id/cantidad"
                    android:hint="Ingrese monto"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRo10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Clave de operaciÃ³n:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView10"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/background_dark"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRo10v2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:id="@+id/cvoperacion"
                    android:hint="Ingrese contraseÃ±a"
                    android:textColor="@android:color/background_dark"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <Button
                android:text="ENVIAR"
                android:id="@+id/btn_Fin"
                android:textColor="@color/md_amber_50"
                android:background="@drawable/shape"
                android:layout_width="match_parent"
                android:backgroundTint="@color/md_blue"
                android:layout_marginTop="15dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_height="45dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/resultado"
                android:visibility="invisible"/>

            <EditText
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/idbeneficiario" />

            <EditText
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/RFC" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/iva"
                android:visibility="invisible"/>
        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />


</android.support.v4.widget.DrawerLayout>