<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_lollipop_height"
        android:background="?colorPrimaryDark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_white_1000"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/tableR1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Elige el tipo de recarga:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
jj
                <Spinner
                    android:id="@+id/carecargasmtc"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/spinner_border"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="textPersonName"
                    android:spinnerMode="dialog"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </TableRow>

            <Spinner
                android:id="@+id/idcliente"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/spinner_border"
                android:textColor="@android:color/background_dark"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Nombre:"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="RFC:"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/rfc"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TableRow
                android:id="@+id/tableR3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuenta de retiro:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <Spinner
                    android:id="@+id/cuenta"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/spinner_border"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:spinnerMode="dialog"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado donde estas realizando la recarga:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRiu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <Spinner
                    android:id="@+id/cataestados"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/spinner_border"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:spinnerMode="dialog"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número de teléfono:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableR8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:id="@+id/notelefono"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/spinner_selector"
                    android:hint="Ingrese número"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirma número:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableR10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:id="@+id/ctelefono"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/spinner_selector"
                    android:hint="Ingrese número"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clave de operación:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableR12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:id="@+id/cvoperacion"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/spinner_selector"
                    android:hint="Ingrese contraseña"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </TableRow>

            <Button
                android:id="@+id/envia_recarga"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="90dp"
                android:background="@drawable/shape"
                android:backgroundTint="@color/md_blue"
                android:text="Finalizar"
                android:textColor="@color/md_amber_50"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                android:visibility="invisible"
                android:layout_marginTop="300dp"/>

            <TextView
                android:id="@+id/deposito"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/retiro"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/servicio"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/referencia"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/codigo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/monto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/usuario"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/folio"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/autorizacion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/comision"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/codigorespuesta"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/respuesta"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ncajero"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/referencia2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/cliente"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />


</android.support.v4.widget.DrawerLayout>