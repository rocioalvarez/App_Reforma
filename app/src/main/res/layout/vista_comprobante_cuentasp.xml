<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/md_white_1000">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/refo"
            android:id="@+id/imageView"
            android:layout_marginTop="30dp"/>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:background="@color/azul"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/image_logo"
                app:srcCompat="@drawable/pruebbassss"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"/>

            <TextView
                android:text="Entre cuentas"
                android:textSize="16dp"
                android:textStyle="normal|bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="7dp"
                android:textColor="@color/md_white_1000"/>

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bordes_list"
            android:layout_marginTop="18dp" >

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="NÃºmero Cuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView45"
                android:textSize="16sp"
                android:textColor="@color/md_black_1000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cliente"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:enabled="false"
                android:textColor="@color/md_black_1000"
                android:textAlignment="textEnd"/>
        </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/linea_separador" />

        <TableRow
            android:id="@+id/tableRow12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/list_divider"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp">

            <TextView
                android:text="Movimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:textSize="16sp"
                android:textColor="@color/md_black_1000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cuenta"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:enabled="false"
                android:textColor="@color/md_black_1000"
                android:textAlignment="textEnd"/>
        </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/linea_separador" />

        <TableRow
            android:id="@+id/tableRow13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/list_divider"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp" >

            <TextView
                android:text="Monto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView43"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:ems="10"
                android:textSize="16sp"
                android:enabled="false"
                android:textColor="@color/md_black_1000"
                android:textAlignment="textEnd"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/cantidad"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:enabled="false"
                android:textColor="@color/md_black_1000"
                android:textAlignment="center"/>
        </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/linea_separador" />

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/list_divider"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp">

            <TextView
                android:text="Concepto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView44"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/concepto"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:enabled="false"
                android:textColor="@color/md_black_1000"
                android:textAlignment="textEnd"/>
        </TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textSize="16sp"
            android:id="@+id/btn_regresar"
            android:layout_marginTop="100dp"/>



    </LinearLayout>

</android.support.v4.widget.DrawerLayout>