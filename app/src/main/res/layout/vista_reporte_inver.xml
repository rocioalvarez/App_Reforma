<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/plazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="16sp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_dark"
                    android:text="PLAZO"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:text="Fecha inversión:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp"
                    android:textColor="@color/md_black_1000_75"/>

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/md_black_1000_75"
                    android:layout_marginStart="5dp"/>


            </TableRow>

            <TableRow
                android:id="@+id/tableRow12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Vencimiento:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp"
                    android:textColor="@color/md_black_1000_75"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/vencimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:textColor="@color/md_black_1000_75"
                    android:layout_marginStart="5dp"/>


            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Depósito:"
                android:textColor="@color/md_black_1000_75"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:layout_gravity="fill_horizontal"/>

            <TextView
                android:id="@+id/cordenante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:textColor="@color/md_blue"
                android:text="vencimientoo"
                android:layout_gravity="fill_horizontal"
                android:textAlignment="@+id/txtdepo"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Interés:"
                android:textColor="@color/md_black_1000_75"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:layout_gravity="fill_horizontal"
                android:id="@+id/txtinte"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/interes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="interess"
                android:textColor="@color/md_blue"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:layout_gravity="fill_horizontal"
                android:layout_marginStart="5dp"/>

        </TableRow>
        </TableLayout>
  </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Días:"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textColor="@android:color/background_dark"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/dias"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="TextView"
                    android:textColor="@android:color/background_dark"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="16sp"
                    android:textAlignment="textStart"
                    android:visibility="invisible"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow09"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/inversionid"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:visibility="invisible"/>

            </TableRow>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>