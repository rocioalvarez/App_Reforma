<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/md_white_1000">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/refo"
                android:id="@+id/imageView"
                android:layout_marginTop="30dp"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:text=" Recarga Electrónica"
            android:textSize="18dp"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:background="@color/azul"
            android:textStyle="normal|bold"
            android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/md_green_500"
                android:textStyle="normal|bold"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:text="Operación Exitosa"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/md_black_1000_75"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:text="Número de teléfono"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/notelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/md_blue"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:textAlignment="center"
                android:text="num telefono"
                android:textStyle="normal|bold"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/md_black_1000_75"
                    android:text="Importe"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/carecargasmtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/md_black_1000_75"
                    android:text="Campo txt"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/md_black_1000_75"
                    android:text="Cuenta de retiro"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/cuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/md_black_1000_75"
                    android:text="Campo txt"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/md_black_1000_75"
                    android:text="Fecha"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/md_black_1000_75"
                    android:text="Campo txt"
                    android:textAlignment="textEnd"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/md_black_1000_75"
                    android:text="Folio"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/folio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/md_black_1000_75"
                    android:text="Campo txt"
                    android:textAlignment="textEnd"/>

            </TableRow>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:textSize="16sp"
                android:id="@+id/btn_regresar"
                android:layout_marginTop="100dp"/>



        </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />


</android.support.v4.widget.DrawerLayout>