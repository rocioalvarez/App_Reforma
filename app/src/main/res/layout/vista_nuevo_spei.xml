<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_lollipop_height"
        android:background="?colorPrimaryDark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="70dp">

                <TextView
                    android:text="CUENTA DE RETIRO"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:textStyle="normal|bold"
                    android:textSize="17sp"
                    android:textColor="@color/md_blue"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/cordenante"
                    android:textSize="16sp"
                    android:ems="20"
                    android:enabled="false"
                    android:textColor="@android:color/background_dark"/>
            </TableRow>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/RFC"
                    android:visibility="invisible"/>

            <TableRow
                android:id="@+id/tableRow1z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="DESTINATARIO"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:textStyle="normal|bold"
                    android:textSize="17sp"
                    android:textColor="@color/md_blue"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Seleccione el Beneficiario"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/textView27"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@color/md_black_1000" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/idcliente"
                    android:textSize="16sp"
                    android:spinnerMode="dialog"
                    android:background="@drawable/spinner_border" />
            </TableRow>



            <TableRow
                android:id="@+id/tableRow6a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:id="@+id/txtnomins"
                    android:text="Institución"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/md_black_1000"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow11q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:id="@+id/institucion"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginTop="1dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="@string/concepto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/md_black_1000"
                    android:layout_width="match_parent" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow11e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="text"
                    android:ems="20"
                    android:id="@+id/concepto"
                    android:textSize="16sp"
                    android:hint="Ingrese descripción"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="@string/cantidad"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@color/md_black_1000"
                    android:layout_width="match_parent" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow11s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="text|number"
                    android:ems="20"
                    android:id="@+id/cantidad"
                    android:hint="Ingrese cantidad"
                    android:textSize="16sp"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Clave de operación:"
                    android:id="@+id/textView32"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/md_black_1000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow12v2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPassword"
                    android:ems="20"
                    android:id="@+id/cvoperacion"
                    android:hint="Ingrese contraseña"
                    android:textSize="16sp"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <Button
                android:text="CONTINUAR"
                android:layout_width="match_parent"
                android:id="@+id/enviar"
                android:background="@drawable/shape"
                android:textColor="@color/md_amber_50"
                android:backgroundTint="@color/md_blue"
                android:textAllCaps="false"
                android:layout_marginTop="25dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_height="45dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:id="@+id/resultado"
                android:visibility="invisible"/>

            <TextView
                android:layout_height="0dp"
                android:id="@+id/textViewn"
                android:layout_width="0dp"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/nombreBeneficiario"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/rfcBeneficiario"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/cuentaspei"
                android:visibility="invisible"/>


            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:id="@+id/IVA"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/cvrastreo"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/referencia"
                android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />

</android.support.v4.widget.DrawerLayout>