<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_lollipop_height"
        android:background="?colorPrimaryDark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/cardview_light_background">

            <TableRow
                android:id="@+id/tableR1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp">

                <TextView
                    android:text="Ordenante:"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/textView22"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15sp"
                    android:visibility="invisible"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR1v2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:inputType="textPersonName"
                    android:id="@+id/nombre_o"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15sp"
                    android:enabled="false"
                    android:text="Name"
                    android:visibility="invisible"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="RFC o CURP:"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/textView41"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15sp"
                    android:visibility="invisible"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:inputType="textPersonName"
                    android:id="@+id/rfc_curp_o"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15sp"
                    android:enabled="false"
                    android:visibility="invisible"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Cuenta Ord:"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/textView37"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15sp"
                    android:visibility="invisible"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:inputType="textPersonName"
                    android:id="@+id/numero_cuenta_o"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15sp"
                    android:enabled="false"
                    android:text="Name"
                    android:visibility="invisible"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:text="Beneficiario:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView40"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/nombre_b"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:text="Name"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableR5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="RFC/CURP:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowVB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/rfc_curp_b"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:text="Name"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Número de Cuenta:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView43"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowMK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/numero_cuenta_b"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:text="Name"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Concepto:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView44"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowBJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/concepto_pago"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:text="Name"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Clave de Rastreo:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView45"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/cvrastreo"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:text="Name"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Referencia:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView46"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowRQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/referencia"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:text="Name"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Monto:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView47"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowFD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/monto_pago"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:text="Name"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR10v2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="IVA:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView48"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowSQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/iva_pago"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:text="Name"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>
            </TableRow>


            <TableRow
                android:id="@+id/tableR11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Clave de operación:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView49"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableR11v2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:id="@+id/cvoperacion"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:hint="Ingrese contraseña"
                    android:background="@drawable/spinner_selector"
                    android:textAlignment="center"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableR12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <Button
                    android:text="ACTUALIZAR"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:id="@+id/actualizar"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape"
                    android:textColor="@color/md_amber_50"
                    android:backgroundTint="@color/md_blue"
                    android:textAllCaps="false" />

                <Button
                    android:text="ELIMINAR"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:id="@+id/eliminar"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/shape"
                    android:textColor="@color/md_amber_50"
                    android:backgroundTint="@color/md_blue"
                    android:textAllCaps="false"/>
            </TableRow>

            <EditText
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:id="@+id/tipo_operacion"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:id="@+id/topologia"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:id="@+id/idpago"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:id="@+id/fecha"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:id="@+id/ref_cobranza"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:id="@+id/prioridad"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:id="@+id/tipo_pago"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:id="@+id/cuentaspei"
                android:visibility="invisible"/>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />

    </FrameLayout>



    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />

</android.support.v4.widget.DrawerLayout>