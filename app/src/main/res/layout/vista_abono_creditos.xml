<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_lollipop_height"
        android:background="?colorPrimaryDark"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/md_white_1000">

        <TableRow
            android:id="@+id/tableRoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="70dp">

            <TextView
                android:text="Seleccione tipo de traspaso:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/table1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="1dp">

            <Spinner
                android:id="@+id/cuenta"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                style="?android:attr/spinnerItemStyle"
                android:textSize="16sp"
                android:textColor="@android:color/background_dark"
                android:spinnerMode="dialog"
                android:background="@drawable/spinner_border"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/table2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Seleccione el crédito:"
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:textColor="@android:color/background_dark"/>
        </TableRow>

        <TableRow
            android:id="@+id/table3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="1dp">

            <Spinner
                android:id="@+id/creditoid"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="16sp"
                android:textColor="@android:color/background_dark"
                android:spinnerMode="dialog"
                android:background="@drawable/spinner_border"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/table4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Cantidad a abonar:"
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:textColor="@android:color/background_dark"/>
        </TableRow>

        <TableRow
            android:id="@+id/table5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="number"
                android:enabled="false"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:background="@drawable/spinner_selector"
                android:textAlignment="center"
                android:hint="Ingrese cantidad"/>
        </TableRow>





        <TableRow
            android:id="@+id/tablRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/md_indigo_100">

            <TextView
                android:id="@+id/capitaltxt"
                android:text="Capital:"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/capital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:enabled="false"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:background="@drawable/spinner_selector"
                android:hint="No hay información"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tablRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/md_indigo_100">

            <TextView
                android:text="Interés:"
                android:id="@+id/textView31"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/interes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:enabled="false"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:background="@drawable/spinner_selector"
                android:textAlignment="center"
                android:hint="No hay información"/>
        </TableRow>

        <TableRow
            android:id="@+id/tablRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/md_indigo_100">

            <TextView
                android:text="Int. Moratorio:"
                android:id="@+id/textView32"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textSize="14sp"
                android:textColor="@android:color/background_dark"/>

            <EditText
                android:id="@+id/moratorio"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:enabled="false"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:background="@drawable/spinner_selector"
                android:textAlignment="center"
                android:hint="No hay información"/>
        </TableRow>

        <TableRow
            android:id="@+id/tablRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/md_indigo_100">

            <TextView
                android:text="IVA:"
                android:id="@+id/textView33"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"/>

            <EditText
                android:id="@+id/iva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:enabled="false"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:background="@drawable/spinner_selector"
                android:textAlignment="center"
                android:hint="No hay información"/>
        </TableRow>


            <TextView
                android:text="Clave de operación:"
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/cvoperacion"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:textColor="@android:color/background_dark"
                android:hint="Ingrese contraseña"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_selector"
                android:textAlignment="center" />

        <Button
            android:text="Finalizar"
            android:id="@+id/btn_abono"
            android:textColor="@color/md_amber_50"
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:backgroundTint="@color/md_blue"
            android:layout_marginTop="20dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_height="45dp"
            android:textSize="16sp"/>


        <TextView
            android:text="resultado"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/resultado"
            android:visibility="invisible"
            android:layout_marginTop="50dp"/>


    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />


    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />


</android.support.v4.widget.DrawerLayout>